<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pulsometer.ExternalProvidersActivity"
    android:background="@drawable/tlo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_via_google_button"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login_via_google_button"
        android:layout_below="@+id/register_via_google_button"
        android:layout_alignStart="@+id/register_via_google_button"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/google_plus_sign_in_connect"
        android:layout_alignTop="@+id/register_via_google_button"
        android:layout_toStartOf="@+id/login_via_google_button"
        android:layout_above="@+id/login_via_google_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/google_plus_sign_in_connect"
        android:layout_below="@+id/register_via_google_button"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/login_via_google_button"
        android:layout_toStartOf="@+id/login_via_google_button" />

</RelativeLayout>
